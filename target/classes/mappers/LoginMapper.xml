<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="LoginMapper">
    <select id="getSalt" parameterType="string" resultType="string">
        SELECT
            salt
        FROM
            admin_info
        WHERE admin_id = #{id}
    </select>

    <select id="getAdminLogin" parameterType="string" resultType="com.jj.jejuTour.login.vo.LoginVo">
        SELECT
            admin_id AS id
            , admin_pwd AS pwd
        FROM
            admin_info
        WHERE admin_id = #{id}
    </select>
</mapper>